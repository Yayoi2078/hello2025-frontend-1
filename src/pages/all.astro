---
import { fetchPosts } from "../esa-utils/fetch";
import Layout from "../layouts/Layout.astro";

const response = await fetchPosts();
const posts = response.posts;
---

<Layout>
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={`/posts/${post.number}`}>{post.name}</a>
        </li>
      ))
    }
  </ul>
</Layout>
