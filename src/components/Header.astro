---
import { Image } from "astro:assets";
import Icon from "../../public/YN-icon.png";
import headerSVG from "../assets/header.svg";
import headerSVGDark from "../assets/header_for_darkmode.svg";
---

<header class="header">
  <a class="top-link" href="/">
    <div class="title-container">
      <picture>
        <source
          srcset={headerSVGDark.src}
          width={headerSVGDark.width}
          height={headerSVGDark.height}
          media="(prefers-color-scheme: dark)"
        />
        <Image
          class="title"
          src={headerSVG}
          alt="新入生情報Web2025 つくばで大学生活を始めるあなたに"
        />
      </picture>
      <Image class="icon" loading="eager" src={Icon} alt="" />
    </div>
  </a>
</header>

<style>
  .top-link {
    display: inline-block;
    margin-block-start: 2rem;
    text-decoration: none;
    color: inherit;
  }
  .title-container {
    display: flex;
    align-items: center;
  }
  .title {
    height: 5rem;
    width: fit-content;
  }
  .icon {
    height: 5rem;
    width: 5rem;
  }
  @media screen and (max-width: 768px) {
    .header {
      text-align: center;
    }
    .title {
      height: 14vw;
      max-height: 5rem;
      width: fit-content;
    }
    .icon {
      height: 14vw;
      width: 14vw;
      max-height: 5rem;
      max-width: 5rem;
    }
  }
</style>
